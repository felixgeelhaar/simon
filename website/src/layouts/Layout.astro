---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL;
const faviconPath = base.endsWith('/') ? `${base}favicon.svg` : `${base}/favicon.svg`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Simon - AI Agent Governance Runtime" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={faviconPath} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<slot name="head" />
	</head>
	<body class="bg-wizard-purple min-h-screen text-slate-100 flex flex-col items-center">
		<slot />
	</body>
</html>