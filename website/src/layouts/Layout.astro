---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL;
const faviconPath = base.endsWith('/') ? `${base}favicon.svg` : `${base}/favicon.svg`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Simon is the deterministic control plane for AI agent execution, enforcing budgets, safety, and measurable delivery."
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href={faviconPath} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<slot name="head" />
	</head>
	<body class="min-h-screen">
		<slot />
	</body>
</html>
